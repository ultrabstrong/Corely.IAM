@page "/accounts"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inherits EntityListPageBase<Account>
@inject IRetrievalService RetrievalService
@inject IRegistrationService RegistrationService
@inject IDeregistrationService DeregistrationService

<PageTitle>Accounts - Corely IAM</PageTitle>

<div class="management-header">
    <h1>Accounts</h1>
    <PermissionView Action="AuthAction.Create" Resource="@PermissionConstants.ACCOUNT_RESOURCE_TYPE">
        <button class="icon-btn text-primary" @onclick="() => _createModal.Show()" title="Create"><i class="bi bi-plus-lg"></i></button>
    </PermissionView>
</div>

<Alert Message="@_message" Type="@_messageType" OnDismissed="() => _message = null" />

@if (_loading && _items == null)
{
    <LoadingSpinner />
}
else
{
    <table class="table table-sm table-striped table-hover mb-0">
        <thead>
            <tr>
                <th>Name</th>
                <th class="table-actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (_items == null || _items.Count == 0)
            {
                <tr><td colspan="2" class="text-muted text-center">No accounts found</td></tr>
            }
            else
            {
                @foreach (var account in _items)
                {
                    <tr>
                        <td>
                            @account.AccountName
                            <br /><small class="guid-text">@account.Id</small>
                        </td>
                        <td class="table-actions">
                            <a href="@AppRoutes.Accounts/@account.Id" class="icon-btn text-primary" title="View"><i class="bi bi-eye"></i></a>
                            <PermissionView Action="AuthAction.Delete" Resource="@PermissionConstants.ACCOUNT_RESOURCE_TYPE" ResourceIds="new[] { account.Id }">
                                <button class="icon-btn text-danger" @onclick="() => ConfirmDelete(account.Id, account.AccountName)" title="Delete"><i class="bi bi-trash"></i></button>
                            </PermissionView>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <Pagination Skip="_skip" Take="_take" TotalCount="_totalCount" OnPageChanged="OnPageChangedAsync" />
}

<FormModal @ref="_createModal" Title="Create Account" OnConfirm="CreateAsync">
    <div class="mb-3">
        <label class="form-label">Account Name</label>
        <input type="text" class="form-control" @bind="_newAccountName" placeholder="Account name" />
    </div>
</FormModal>

<ConfirmModal @ref="_confirmModal" Title="Delete Account" Message="@_confirmMessage" ConfirmText="Delete" OnConfirm="DeleteAsync" />

@code {
    private string? _newAccountName;
    private FormModal _createModal = null!;
    private ConfirmModal _confirmModal = null!;

    protected override async Task LoadCoreAsync()
    {
        var result = await RetrievalService.ListAccountsAsync(skip: _skip, take: _take);
        if (result.ResultCode == RetrieveResultCode.Success && result.Data != null)
        {
            _items = result.Data.Items;
            _totalCount = result.Data.TotalCount;
        }
    }

    private async Task CreateAsync()
    {
        if (string.IsNullOrWhiteSpace(_newAccountName)) return;
        await ExecuteSafeAsync(async () =>
        {
            var result = await RegistrationService.RegisterAccountAsync(new RegisterAccountRequest(_newAccountName));
            SetResultMessage(result.ResultCode == RegisterAccountResultCode.Success, "Account created.", result.Message ?? "Failed.");
            _newAccountName = string.Empty;
            await ReloadAsync();
        });
    }

    private void ConfirmDelete(Guid id, string name) => ShowConfirmation(_confirmModal, id, $"Delete account '{name}'?");

    private async Task DeleteAsync()
    {
        await ExecuteSafeAsync(async () =>
        {
            var result = await DeregistrationService.DeregisterAccountAsync();
            SetResultMessage(result.ResultCode == DeregisterAccountResultCode.Success, "Account deleted.", result.Message ?? "Failed.");
            await ReloadAsync();
        });
    }
}
