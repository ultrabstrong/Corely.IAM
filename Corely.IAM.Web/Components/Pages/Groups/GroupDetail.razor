@page "/groups/{Id:guid}"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inherits EntityDetailPageBase
@inject IRetrievalService RetrievalService
@inject IModificationService ModificationService
@inject IRegistrationService RegistrationService
@inject IDeregistrationService DeregistrationService

<PageTitle>Group Detail - Corely IAM</PageTitle>

<div class="management-header">
    <h1>Group Detail</h1>
    <a href="@AppRoutes.Blazor.Groups" class="btn btn-outline-secondary btn-sm">Back to Groups</a>
</div>

<Alert Message="@_message" Type="@_messageType" OnDismissed="() => _message = null" />

@if (_loading && _group == null)
{
    <LoadingSpinner />
}
else if (_group == null)
{
    <div class="alert alert-warning">Group not found.</div>
}
else
{
    <!-- Properties -->
    <div class="card mb-4">
        <div class="card-header"><h5 class="mb-0">Properties</h5></div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label fw-bold">Name</label>
                <input type="text" class="form-control" @bind="_editName" />
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Description</label>
                <input type="text" class="form-control" @bind="_editDescription" placeholder="Optional description" />
            </div>
            <PermissionView Action="AuthAction.Update" Resource="@PermissionConstants.GROUP_RESOURCE_TYPE" ResourceIds="new[] { Id }">
                <button class="btn btn-primary" @onclick="SavePropertiesAsync" disabled="@_loading">Save</button>
            </PermissionView>
        </div>
    </div>

    <!-- Users -->
    <div class="card mb-4">
        <div class="card-header"><h5 class="mb-0">Users</h5></div>
        <div class="card-body">
            <PermissionView Action="AuthAction.Update" Resource="@PermissionConstants.GROUP_RESOURCE_TYPE" ResourceIds="new[] { Id }">
                <div class="row g-3 mb-3">
                    <div class="col-auto flex-grow-1">
                        <input type="text" class="form-control" @bind="_addUserId" placeholder="User ID (GUID)" />
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-primary" @onclick="AddUserAsync" disabled="@_loading">Add User</button>
                    </div>
                </div>
            </PermissionView>
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th class="table-actions">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (_group.Users == null || _group.Users.Count == 0)
                    {
                        <tr><td colspan="3" class="text-muted text-center">No users assigned</td></tr>
                    }
                    else
                    {
                        @foreach (var user in _group.Users)
                        {
                            <tr>
                                <td><code>@user.Id</code></td>
                                <td>@user.Name</td>
                                <td class="table-actions">
                                    <PermissionView Action="AuthAction.Update" Resource="@PermissionConstants.GROUP_RESOURCE_TYPE" ResourceIds="new[] { Id }">
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmRemoveUser(user.Id, user.Name)">Remove</button>
                                    </PermissionView>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Roles -->
    <div class="card mb-4">
        <div class="card-header"><h5 class="mb-0">Roles</h5></div>
        <div class="card-body">
            <PermissionView Action="AuthAction.Update" Resource="@PermissionConstants.GROUP_RESOURCE_TYPE" ResourceIds="new[] { Id }">
                <div class="row g-3 mb-3">
                    <div class="col-auto flex-grow-1">
                        <input type="text" class="form-control" @bind="_addRoleId" placeholder="Role ID (GUID)" />
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-primary" @onclick="AddRoleAsync" disabled="@_loading">Add Role</button>
                    </div>
                </div>
            </PermissionView>
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th class="table-actions">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (_group.Roles == null || _group.Roles.Count == 0)
                    {
                        <tr><td colspan="3" class="text-muted text-center">No roles assigned</td></tr>
                    }
                    else
                    {
                        @foreach (var role in _group.Roles)
                        {
                            <tr>
                                <td><code>@role.Id</code></td>
                                <td>@role.Name</td>
                                <td class="table-actions">
                                    <PermissionView Action="AuthAction.Update" Resource="@PermissionConstants.GROUP_RESOURCE_TYPE" ResourceIds="new[] { Id }">
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmRemoveRole(role.Id, role.Name)">Remove</button>
                                    </PermissionView>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<ConfirmModal @ref="_removeUserModal" Title="Remove User" Message="@_confirmMessage" ConfirmText="Remove" OnConfirm="RemoveUserAsync" />
<ConfirmModal @ref="_removeRoleModal" Title="Remove Role" Message="@_confirmMessage" ConfirmText="Remove" OnConfirm="RemoveRoleAsync" />

@code {
    private Group? _group;
    private string _editName = string.Empty;
    private string? _editDescription;
    private string? _addUserId;
    private string? _addRoleId;
    private ConfirmModal _removeUserModal = null!;
    private ConfirmModal _removeRoleModal = null!;

    protected override async Task LoadCoreAsync()
    {
        var result = await RetrievalService.GetGroupAsync(Id, hydrate: true);
        if (result.ResultCode == RetrieveResultCode.Success && result.Item != null)
        {
            _group = result.Item;
            _editName = _group.Name;
            _editDescription = _group.Description;
        }
    }

    private async Task SavePropertiesAsync()
    {
        if (string.IsNullOrWhiteSpace(_editName)) return;
        await ExecuteSafeAsync(async () =>
        {
            var result = await ModificationService.ModifyGroupAsync(new UpdateGroupRequest(Id, _editName, _editDescription));
            SetResultMessage(result.ResultCode == ModifyResultCode.Success, "Group updated.", result.Message);
            await ReloadAsync();
        });
    }

    private async Task AddUserAsync()
    {
        if (string.IsNullOrWhiteSpace(_addUserId) || !TryParseGuid(_addUserId, out var userId)) return;
        await ExecuteSafeAsync(async () =>
        {
            var result = await RegistrationService.RegisterUsersWithGroupAsync(new RegisterUsersWithGroupRequest([userId], Id));
            SetResultMessage(result.ResultCode == AddUsersToGroupResultCode.Success, "User added.", result.Message);
            _addUserId = string.Empty;
            await ReloadAsync();
        });
    }

    private void ConfirmRemoveUser(Guid userId, string name) => ShowConfirmation(_removeUserModal, userId, $"Remove user '{name}'?");

    private async Task RemoveUserAsync()
    {
        await ExecuteSafeAsync(async () =>
        {
            var result = await DeregistrationService.DeregisterUsersFromGroupAsync(new DeregisterUsersFromGroupRequest([_confirmItemId], Id));
            SetResultMessage(result.ResultCode == DeregisterUsersFromGroupResultCode.Success, "User removed.", result.Message);
            await ReloadAsync();
        });
    }

    private async Task AddRoleAsync()
    {
        if (string.IsNullOrWhiteSpace(_addRoleId) || !TryParseGuid(_addRoleId, out var roleId)) return;
        await ExecuteSafeAsync(async () =>
        {
            var result = await RegistrationService.RegisterRolesWithGroupAsync(new RegisterRolesWithGroupRequest([roleId], Id));
            SetResultMessage(result.ResultCode == AssignRolesToGroupResultCode.Success, "Role added.", result.Message);
            _addRoleId = string.Empty;
            await ReloadAsync();
        });
    }

    private void ConfirmRemoveRole(Guid roleId, string name) => ShowConfirmation(_removeRoleModal, roleId, $"Remove role '{name}'?");

    private async Task RemoveRoleAsync()
    {
        await ExecuteSafeAsync(async () =>
        {
            var result = await DeregistrationService.DeregisterRolesFromGroupAsync(new DeregisterRolesFromGroupRequest([_confirmItemId], Id));
            SetResultMessage(result.ResultCode == DeregisterRolesFromGroupResultCode.Success, "Role removed.", result.Message);
            await ReloadAsync();
        });
    }
}
