@page "/groups/{Id:guid}"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inherits EntityDetailPageBase
@inject IRetrievalService RetrievalService
@inject IModificationService ModificationService
@inject IRegistrationService RegistrationService
@inject IDeregistrationService DeregistrationService

<PageTitle>Group Detail - Corely IAM</PageTitle>

<div class="management-header">
    <h1><i class="bi bi-diagram-3 me-2"></i>@(_group?.Name ?? "Group") <span class="resource-label">Group</span></h1>
    <a href="@AppRoutes.Groups" class="btn btn-outline-secondary btn-sm">Back to Groups</a>
</div>

<Alert Message="@_message" Type="@_messageType" OnDismissed="() => _message = null" />

@if (_loading && _group == null)
{
    <LoadingSpinner />
}
else if (_group == null)
{
    <div class="alert alert-warning">Group not found.</div>
}
else
{
    <!-- Properties -->
    <div class="props-grid mb-3">
        <span class="prop-label">Name</span>
        <div class="prop-value"><input type="text" class="form-control form-control-sm" @bind="_editName" /></div>
        <span class="prop-label">Description</span>
        <div class="prop-value"><input type="text" class="form-control form-control-sm" @bind="_editDescription" placeholder="Optional" /></div>
    </div>
    <PermissionView Action="AuthAction.Update" Resource="@PermissionConstants.GROUP_RESOURCE_TYPE" ResourceIds="new[] { Id }">
        <button class="btn btn-primary btn-sm" @onclick="SavePropertiesAsync" disabled="@_loading">Save</button>
    </PermissionView>

    <!-- Users -->
    <div class="section-bar mt-4">
        <h6>Users</h6>
        <PermissionView Action="AuthAction.Update" Resource="@PermissionConstants.GROUP_RESOURCE_TYPE" ResourceIds="new[] { Id }">
            <button class="btn btn-primary btn-sm" @onclick="() => _userPickerModal.ShowAsync()" disabled="@_loading">Add Users</button>
        </PermissionView>
    </div>
    <table class="table table-sm table-hover mb-0">
        <thead><tr><th>Name</th><th class="table-actions">Actions</th></tr></thead>
        <tbody>
            @if (_group.Users == null || _group.Users.Count == 0)
            {
                <tr><td colspan="2" class="text-muted text-center">No users assigned</td></tr>
            }
            else
            {
                @foreach (var user in _group.Users)
                {
                    <tr>
                        <td>
                            @user.Name
                            <br /><small class="guid-text">@user.Id</small>
                        </td>
                        <td class="table-actions">
                            <PermissionView Action="AuthAction.Update" Resource="@PermissionConstants.GROUP_RESOURCE_TYPE" ResourceIds="new[] { Id }">
                                <button class="icon-btn text-danger" @onclick="() => ConfirmRemoveUser(user.Id, user.Name)" title="Remove"><i class="bi bi-trash"></i></button>
                            </PermissionView>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <!-- Roles -->
    <div class="section-bar mt-4">
        <h6>Roles</h6>
        <PermissionView Action="AuthAction.Update" Resource="@PermissionConstants.GROUP_RESOURCE_TYPE" ResourceIds="new[] { Id }">
            <button class="btn btn-primary btn-sm" @onclick="() => _rolePickerModal.ShowAsync()" disabled="@_loading">Add Roles</button>
        </PermissionView>
    </div>
    <table class="table table-sm table-hover mb-0">
        <thead><tr><th>Name</th><th class="table-actions">Actions</th></tr></thead>
        <tbody>
            @if (_group.Roles == null || _group.Roles.Count == 0)
            {
                <tr><td colspan="2" class="text-muted text-center">No roles assigned</td></tr>
            }
            else
            {
                @foreach (var role in _group.Roles)
                {
                    <tr>
                        <td>
                            @role.Name
                            <br /><small class="guid-text">@role.Id</small>
                        </td>
                        <td class="table-actions">
                            <PermissionView Action="AuthAction.Update" Resource="@PermissionConstants.GROUP_RESOURCE_TYPE" ResourceIds="new[] { Id }">
                                <button class="icon-btn text-danger" @onclick="() => ConfirmRemoveRole(role.Id, role.Name)" title="Remove"><i class="bi bi-trash"></i></button>
                            </PermissionView>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

<EntityPickerModal @ref="_userPickerModal"
                   Title="Add Users to Group"
                   SearchPlaceholder="Search users..."
                   FetchItemsAsync="FetchAvailableUsersAsync"
                   ExcludeIds="_assignedUserIds"
                   OnConfirm="AddUsersAsync" />

<EntityPickerModal @ref="_rolePickerModal"
                   Title="Add Roles to Group"
                   SearchPlaceholder="Search roles..."
                   FetchItemsAsync="FetchAvailableRolesAsync"
                   ExcludeIds="_assignedRoleIds"
                   OnConfirm="AddRolesAsync" />

<ConfirmModal @ref="_removeUserModal" Title="Remove User" Message="@_confirmMessage" ConfirmText="Remove" OnConfirm="RemoveUserAsync" />
<ConfirmModal @ref="_removeRoleModal" Title="Remove Role" Message="@_confirmMessage" ConfirmText="Remove" OnConfirm="RemoveRoleAsync" />

@code {
    private Group? _group;
    private string _editName = string.Empty;
    private string? _editDescription;
    private EntityPickerModal _userPickerModal = null!;
    private EntityPickerModal _rolePickerModal = null!;
    private ConfirmModal _removeUserModal = null!;
    private ConfirmModal _removeRoleModal = null!;
    private HashSet<Guid> _assignedUserIds = [];
    private HashSet<Guid> _assignedRoleIds = [];

    protected override async Task LoadCoreAsync()
    {
        var result = await RetrievalService.GetGroupAsync(Id, hydrate: true);
        if (result.ResultCode == RetrieveResultCode.Success && result.Item != null)
        {
            _group = result.Item;
            _editName = _group.Name;
            _editDescription = _group.Description;
            _assignedUserIds = (_group.Users ?? []).Select(u => u.Id).ToHashSet();
            _assignedRoleIds = (_group.Roles ?? []).Select(r => r.Id).ToHashSet();
        }
    }

    private async Task<(List<PickerItem>, int)> FetchAvailableUsersAsync(int skip, int take)
    {
        var result = await RetrievalService.ListUsersAsync(skip: skip, take: take);
        if (result.ResultCode == RetrieveResultCode.Success && result.Data != null)
        {
            var items = result.Data.Items.Select(u => new PickerItem(u.Id, u.Username, u.Email)).ToList();
            return (items, result.Data.TotalCount);
        }
        return ([], 0);
    }

    private async Task<(List<PickerItem>, int)> FetchAvailableRolesAsync(int skip, int take)
    {
        var result = await RetrievalService.ListRolesAsync(skip: skip, take: take);
        if (result.ResultCode == RetrieveResultCode.Success && result.Data != null)
        {
            var items = result.Data.Items.Select(r => new PickerItem(r.Id, r.Name, r.Description)).ToList();
            return (items, result.Data.TotalCount);
        }
        return ([], 0);
    }

    private async Task SavePropertiesAsync()
    {
        if (string.IsNullOrWhiteSpace(_editName)) return;
        await ExecuteSafeAsync(async () =>
        {
            var result = await ModificationService.ModifyGroupAsync(new UpdateGroupRequest(Id, _editName, _editDescription));
            SetResultMessage(result.ResultCode == ModifyResultCode.Success, "Group updated.", result.Message);
            await ReloadAsync();
        });
    }

    private async Task AddUsersAsync(List<Guid> userIds)
    {
        await ExecuteSafeAsync(async () =>
        {
            var result = await RegistrationService.RegisterUsersWithGroupAsync(new RegisterUsersWithGroupRequest(userIds, Id));
            SetResultMessage(result.ResultCode == AddUsersToGroupResultCode.Success, $"{userIds.Count} user(s) added.", result.Message);
            await ReloadAsync();
        });
    }

    private void ConfirmRemoveUser(Guid userId, string name) => ShowConfirmation(_removeUserModal, userId, $"Remove user '{name}'?");

    private async Task RemoveUserAsync()
    {
        await ExecuteSafeAsync(async () =>
        {
            var result = await DeregistrationService.DeregisterUsersFromGroupAsync(new DeregisterUsersFromGroupRequest([_confirmItemId], Id));
            SetResultMessage(result.ResultCode == DeregisterUsersFromGroupResultCode.Success, "User removed.", result.Message);
            await ReloadAsync();
        });
    }

    private async Task AddRolesAsync(List<Guid> roleIds)
    {
        await ExecuteSafeAsync(async () =>
        {
            var result = await RegistrationService.RegisterRolesWithGroupAsync(new RegisterRolesWithGroupRequest(roleIds, Id));
            SetResultMessage(result.ResultCode == AssignRolesToGroupResultCode.Success, $"{roleIds.Count} role(s) added.", result.Message);
            await ReloadAsync();
        });
    }

    private void ConfirmRemoveRole(Guid roleId, string name) => ShowConfirmation(_removeRoleModal, roleId, $"Remove role '{name}'?");

    private async Task RemoveRoleAsync()
    {
        await ExecuteSafeAsync(async () =>
        {
            var result = await DeregistrationService.DeregisterRolesFromGroupAsync(new DeregisterRolesFromGroupRequest([_confirmItemId], Id));
            SetResultMessage(result.ResultCode == DeregisterRolesFromGroupResultCode.Success, "Role removed.", result.Message);
            await ReloadAsync();
        });
    }
}
