@page "/groups"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inherits EntityListPageBase<Group>
@inject IRetrievalService RetrievalService
@inject IRegistrationService RegistrationService
@inject IDeregistrationService DeregistrationService

<PageTitle>Groups - Corely IAM</PageTitle>

<div class="management-header">
    <h1>Groups</h1>
    <PermissionView Action="AuthAction.Create" Resource="@PermissionConstants.GROUP_RESOURCE_TYPE">
        <button class="icon-btn text-primary" @onclick="() => _createModal.Show()" title="Create"><i class="bi bi-plus-lg"></i></button>
    </PermissionView>
</div>

<Alert Message="@_message" Type="@_messageType" OnDismissed="() => _message = null" />

@if (_loading && _items == null)
{
    <LoadingSpinner />
}
else
{
    <table class="table table-sm table-striped table-hover mb-0">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th class="table-actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (_items == null || _items.Count == 0)
            {
                <tr><td colspan="3" class="text-muted text-center">No groups found</td></tr>
            }
            else
            {
                @foreach (var group in _items)
                {
                    <tr>
                        <td>
                            @group.Name
                            <br /><small class="guid-text">@group.Id</small>
                        </td>
                        <td>@(group.Description ?? "â€”")</td>
                        <td class="table-actions">
                            <a href="@AppRoutes.Groups/@group.Id" class="icon-btn text-primary" title="View"><i class="bi bi-eye"></i></a>
                            <PermissionView Action="AuthAction.Delete" Resource="@PermissionConstants.GROUP_RESOURCE_TYPE" ResourceIds="new[] { group.Id }">
                                <button class="icon-btn text-danger" @onclick="() => ConfirmDelete(group.Id, group.Name)" title="Delete"><i class="bi bi-trash"></i></button>
                            </PermissionView>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <Pagination Skip="_skip" Take="_take" TotalCount="_totalCount" OnPageChanged="OnPageChangedAsync" />
}

<FormModal @ref="_createModal" Title="Create Group" OnConfirm="CreateAsync">
    <div class="mb-3">
        <label class="form-label">Group Name</label>
        <input type="text" class="form-control" @bind="_newGroupName" placeholder="Group name" />
    </div>
</FormModal>

<ConfirmModal @ref="_confirmModal" Title="Delete Group" Message="@_confirmMessage" ConfirmText="Delete" OnConfirm="DeleteAsync" />

@code {
    private string? _newGroupName;
    private FormModal _createModal = null!;
    private ConfirmModal _confirmModal = null!;

    protected override async Task LoadCoreAsync()
    {
        var result = await RetrievalService.ListGroupsAsync(skip: _skip, take: _take);
        if (result.ResultCode == RetrieveResultCode.Success && result.Data != null)
        {
            _items = result.Data.Items;
            _totalCount = result.Data.TotalCount;
        }
    }

    private async Task CreateAsync()
    {
        if (string.IsNullOrWhiteSpace(_newGroupName)) return;
        await ExecuteSafeAsync(async () =>
        {
            var result = await RegistrationService.RegisterGroupAsync(new RegisterGroupRequest(_newGroupName));
            SetResultMessage(result.ResultCode == CreateGroupResultCode.Success, "Group created.", result.Message);
            _newGroupName = string.Empty;
            await ReloadAsync();
        });
    }

    private void ConfirmDelete(Guid id, string name) => ShowConfirmation(_confirmModal, id, $"Delete group '{name}'?");

    private async Task DeleteAsync()
    {
        await ExecuteSafeAsync(async () =>
        {
            var result = await DeregistrationService.DeregisterGroupAsync(new DeregisterGroupRequest(_confirmItemId));
            SetResultMessage(result.ResultCode == DeregisterGroupResultCode.Success, "Group deleted.", result.Message);
            await ReloadAsync();
        });
    }
}
