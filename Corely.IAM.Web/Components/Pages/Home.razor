@page "/"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inherits AuthenticatedPageBase
@inject IRegistrationService RegistrationService

<PageTitle>Dashboard - Corely IAM</PageTitle>

@if (UserContext?.AvailableAccounts.Count == 0)
{
    @* State 1: No accounts — onboarding *@
    <div class="d-flex justify-content-center align-items-center mt-5">
        <div class="onboarding-card card border-0 shadow">
            <div class="card-body p-4 text-center">
                <i class="bi bi-building-add fs-1 text-primary"></i>
                <h3 class="mt-3">Welcome to Corely IAM</h3>
                <p class="text-muted">Create your first account to get started.</p>

                <Alert Message="@_message" Type="_messageType" OnDismissed="() => _message = null" />

                <div class="input-group mt-3">
                    <input type="text" class="form-control" @bind="_newAccountName" placeholder="Account name" />
                    <button class="btn btn-primary" @onclick="CreateAccountAsync" disabled="@_loading">
                        @if (_loading)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Create Account
                    </button>
                </div>
            </div>
        </div>
    </div>
}
else if (UserContext?.CurrentAccount != null)
{
    @* State 2: Account selected — header + entity grid *@
    <div class="dashboard-account-header d-flex align-items-center justify-content-between mb-4">
        <span class="fw-semibold"><i class="bi bi-building me-2"></i>@UserContext.CurrentAccount.AccountName</span>
        <a href="@AppRoutes.Accounts" class="btn btn-outline-light btn-sm" style="font-size: 0.8rem;">Manage</a>
    </div>

    <div class="row g-3">
        <div class="col-md-3">
            <a href="@AppRoutes.Users" class="card border-0 shadow entity-card h-100 text-decoration-none text-body">
                <div class="p-3 text-center bg-success-subtle" style="border-radius: var(--bs-card-inner-border-radius) var(--bs-card-inner-border-radius) 0 0;">
                    <i class="bi bi-people fs-3 text-success"></i>
                </div>
                <div class="card-body py-2 text-center">
                    <h6 class="card-title mb-0">Users</h6>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="@AppRoutes.Groups" class="card border-0 shadow entity-card h-100 text-decoration-none text-body">
                <div class="p-3 text-center bg-info-subtle" style="border-radius: var(--bs-card-inner-border-radius) var(--bs-card-inner-border-radius) 0 0;">
                    <i class="bi bi-diagram-3 fs-3 text-info"></i>
                </div>
                <div class="card-body py-2 text-center">
                    <h6 class="card-title mb-0">Groups</h6>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="@AppRoutes.Roles" class="card border-0 shadow entity-card h-100 text-decoration-none text-body">
                <div class="p-3 text-center bg-warning-subtle" style="border-radius: var(--bs-card-inner-border-radius) var(--bs-card-inner-border-radius) 0 0;">
                    <i class="bi bi-shield fs-3 text-warning"></i>
                </div>
                <div class="card-body py-2 text-center">
                    <h6 class="card-title mb-0">Roles</h6>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="@AppRoutes.Permissions" class="card border-0 shadow entity-card h-100 text-decoration-none text-body">
                <div class="p-3 text-center bg-danger-subtle" style="border-radius: var(--bs-card-inner-border-radius) var(--bs-card-inner-border-radius) 0 0;">
                    <i class="bi bi-key fs-3 text-danger"></i>
                </div>
                <div class="card-body py-2 text-center">
                    <h6 class="card-title mb-0">Permissions</h6>
                </div>
            </a>
        </div>
    </div>
}
else
{
    @* State 3: Accounts exist, none selected *@
    <div class="d-flex justify-content-center align-items-center mt-5">
        <div class="onboarding-card card border-0 shadow">
            <div class="card-body p-4 text-center">
                <i class="bi bi-arrow-right-circle fs-1 text-primary"></i>
                <h3 class="mt-3">Select an Account</h3>
                <p class="text-muted">You have @UserContext?.AvailableAccounts.Count account(s) available. Select one to continue.</p>
                <a href="@AppRoutes.SelectAccount" class="btn btn-primary" data-enhance-nav="false">Select Account</a>
            </div>
        </div>
    </div>
}

@code {
    private string? _newAccountName;
    private string? _message;
    private AlertType _messageType = AlertType.Danger;
    private bool _loading;

    private async Task CreateAccountAsync()
    {
        if (string.IsNullOrWhiteSpace(_newAccountName))
        {
            _message = "Account name is required.";
            _messageType = AlertType.Danger;
            return;
        }

        _loading = true;
        _message = null;

        try
        {
            var result = await RegistrationService.RegisterAccountAsync(
                new RegisterAccountRequest(_newAccountName));

            if (result.ResultCode == RegisterAccountResultCode.Success)
            {
                NavigationManager.NavigateTo(
                    $"/switch-account?accountId={result.CreatedAccountId}&returnUrl=/",
                    forceLoad: true);
            }
            else
            {
                _message = result.Message ?? "Failed to create account.";
                _messageType = AlertType.Danger;
            }
        }
        catch (Exception ex)
        {
            _message = $"An error occurred: {ex.Message}";
            _messageType = AlertType.Danger;
        }
        finally
        {
            _loading = false;
        }
    }
}
