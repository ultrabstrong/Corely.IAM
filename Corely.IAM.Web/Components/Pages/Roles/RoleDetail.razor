@page "/roles/{Id:guid}"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inherits EntityDetailPageBase
@inject IRetrievalService RetrievalService
@inject IModificationService ModificationService
@inject IRegistrationService RegistrationService
@inject IDeregistrationService DeregistrationService

<PageTitle>Role Detail - Corely IAM</PageTitle>

<div class="management-header">
    <h1><i class="bi bi-shield me-2"></i>@(_role?.Name ?? "Role") <span class="resource-label">Role</span></h1>
    <a href="@AppRoutes.Roles" class="btn btn-outline-secondary btn-sm">Back to Roles</a>
</div>

<Alert Message="@_message" Type="@_messageType" OnDismissed="() => _message = null" />

@if (_loading && _role == null)
{
    <LoadingSpinner />
}
else if (_role == null)
{
    <div class="alert alert-warning">Role not found.</div>
}
else
{
    <!-- Properties -->
    <div class="props-grid mb-3">
        <span class="prop-label">Name</span>
        <div class="prop-value">
            <input type="text" class="form-control form-control-sm" @bind="_editName" disabled="@_role.IsSystemDefined" />
            @if (_role.IsSystemDefined)
            {
                <span class="sys-badge ms-2">System</span>
            }
        </div>
        <span class="prop-label">Description</span>
        <div class="prop-value"><input type="text" class="form-control form-control-sm" @bind="_editDescription" placeholder="Optional" disabled="@_role.IsSystemDefined" /></div>
    </div>
    @if (!_role.IsSystemDefined)
    {
        <PermissionView Action="AuthAction.Update" Resource="@PermissionConstants.ROLE_RESOURCE_TYPE" ResourceIds="new[] { Id }">
            <button class="btn btn-primary btn-sm" @onclick="SavePropertiesAsync" disabled="@_loading">Save</button>
        </PermissionView>
    }

    <!-- Permissions -->
    <div class="section-bar mt-4">
        <h6>Permissions</h6>
        <PermissionView Action="AuthAction.Update" Resource="@PermissionConstants.ROLE_RESOURCE_TYPE" ResourceIds="new[] { Id }">
            <button class="btn btn-primary btn-sm" @onclick="() => _permissionPickerModal.ShowAsync()" disabled="@_loading">Add Permissions</button>
        </PermissionView>
    </div>
    <table class="table table-sm table-hover mb-0">
        <thead><tr><th>Name</th><th class="table-actions">Actions</th></tr></thead>
        <tbody>
            @if (_role.Permissions == null || _role.Permissions.Count == 0)
            {
                <tr><td colspan="2" class="text-muted text-center">No permissions assigned</td></tr>
            }
            else
            {
                @foreach (var permission in _role.Permissions)
                {
                    <tr>
                        <td>
                            @permission.Name
                            <br /><small class="guid-text">@permission.Id</small>
                        </td>
                        <td class="table-actions">
                            <PermissionView Action="AuthAction.Update" Resource="@PermissionConstants.ROLE_RESOURCE_TYPE" ResourceIds="new[] { Id }">
                                <button class="icon-btn text-danger" @onclick="() => ConfirmRemovePermission(permission.Id, permission.Name)" title="Remove"><i class="bi bi-trash"></i></button>
                            </PermissionView>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

<EntityPickerModal @ref="_permissionPickerModal"
                   Title="Add Permissions to Role"
                   SearchPlaceholder="Search permissions..."
                   FetchItemsAsync="FetchAvailablePermissionsAsync"
                   ExcludeIds="_assignedPermissionIds"
                   OnConfirm="AddPermissionsAsync" />

<ConfirmModal @ref="_removePermissionModal" Title="Remove Permission" Message="@_confirmMessage" ConfirmText="Remove" OnConfirm="RemovePermissionAsync" />

@code {
    private Role? _role;
    private string _editName = string.Empty;
    private string? _editDescription;
    private HashSet<Guid> _assignedPermissionIds = [];
    private EntityPickerModal _permissionPickerModal = null!;
    private ConfirmModal _removePermissionModal = null!;

    protected override async Task LoadCoreAsync()
    {
        var result = await RetrievalService.GetRoleAsync(Id, hydrate: true);
        if (result.ResultCode == RetrieveResultCode.Success && result.Item != null)
        {
            _role = result.Item;
            _editName = _role.Name;
            _editDescription = _role.Description;
            _assignedPermissionIds = (_role.Permissions ?? []).Select(p => p.Id).ToHashSet();
        }
    }

    private async Task<(List<PickerItem>, int)> FetchAvailablePermissionsAsync(int skip, int take)
    {
        var result = await RetrievalService.ListPermissionsAsync(skip: skip, take: take);
        if (result.ResultCode == RetrieveResultCode.Success && result.Data != null)
        {
            var items = result.Data.Items
                .Select(p => new PickerItem(p.Id, p.DisplayName, p.Description))
                .ToList();
            return (items, result.Data.TotalCount);
        }
        return ([], 0);
    }

    private async Task SavePropertiesAsync()
    {
        if (string.IsNullOrWhiteSpace(_editName)) return;
        await ExecuteSafeAsync(async () =>
        {
            var result = await ModificationService.ModifyRoleAsync(new UpdateRoleRequest(Id, _editName, _editDescription));
            SetResultMessage(result.ResultCode == ModifyResultCode.Success, "Role updated.", result.Message);
            await ReloadAsync();
        });
    }

    private async Task AddPermissionsAsync(List<Guid> permissionIds)
    {
        await ExecuteSafeAsync(async () =>
        {
            var result = await RegistrationService.RegisterPermissionsWithRoleAsync(new RegisterPermissionsWithRoleRequest(permissionIds, Id));
            SetResultMessage(result.ResultCode == AssignPermissionsToRoleResultCode.Success, $"{permissionIds.Count} permission(s) added.", result.Message);
            await ReloadAsync();
        });
    }

    private void ConfirmRemovePermission(Guid permissionId, string name) => ShowConfirmation(_removePermissionModal, permissionId, $"Remove permission '{name}'?");

    private async Task RemovePermissionAsync()
    {
        await ExecuteSafeAsync(async () =>
        {
            var result = await DeregistrationService.DeregisterPermissionsFromRoleAsync(new DeregisterPermissionsFromRoleRequest([_confirmItemId], Id));
            SetResultMessage(result.ResultCode == DeregisterPermissionsFromRoleResultCode.Success, "Permission removed.", result.Message);
            await ReloadAsync();
        });
    }
}
