@page "/users/{Id:guid}"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inherits EntityDetailPageBase
@inject IRetrievalService RetrievalService
@inject IModificationService ModificationService
@inject IRegistrationService RegistrationService
@inject IDeregistrationService DeregistrationService

<PageTitle>@_username - Corely IAM</PageTitle>

<div class="management-header">
    <h1>User: @_username</h1>
    <a href="@AppRoutes.Users" class="btn btn-outline-secondary">Back to List</a>
</div>

<Alert Message="@_message" Type="@_messageType" OnDismissed="() => _message = null" />

@if (_loading && _username == null)
{
    <LoadingSpinner />
}
else
{
    <div class="props-grid mb-3">
        <span class="prop-label">Username</span>
        <div class="prop-value"><input type="text" class="form-control form-control-sm" @bind="_username" /></div>
        <span class="prop-label">Email</span>
        <div class="prop-value"><input type="email" class="form-control form-control-sm" @bind="_email" /></div>
    </div>
    <button class="btn btn-primary btn-sm" @onclick="SaveAsync" disabled="@_loading">Save</button>

    <div class="section-bar mt-4">
        <h6>Roles</h6>
        <button class="btn btn-primary btn-sm" @onclick="() => _rolePickerModal.ShowAsync()" disabled="@_loading">Add Roles</button>
    </div>
    <table class="table table-sm table-striped table-hover mb-0">
        <thead><tr><th>Name</th><th class="table-actions">Actions</th></tr></thead>
        <tbody>
            @if (_roles.Count == 0)
            {
                <tr><td colspan="2" class="text-muted text-center">No roles assigned</td></tr>
            }
            @foreach (var role in _roles)
            {
                <tr>
                    <td>
                        @role.Name
                        <br /><small class="guid-text">@role.Id</small>
                    </td>
                    <td class="table-actions">
                        <a href="@AppRoutes.Roles/@role.Id" class="icon-btn text-primary" title="View"><i class="bi bi-eye"></i></a>
                        <button class="icon-btn text-danger" @onclick="() => ConfirmRemoveRole(role.Id, role.Name)" title="Remove"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<EntityPickerModal @ref="_rolePickerModal"
                   Title="Assign Roles to User"
                   SearchPlaceholder="Search roles..."
                   FetchItemsAsync="FetchAvailableRolesAsync"
                   ExcludeIds="_assignedRoleIds"
                   OnConfirm="AddRolesAsync" />

<ConfirmModal @ref="_confirmModal" Title="Remove Role" Message="@_confirmMessage" ConfirmText="Remove" OnConfirm="RemoveRoleAsync" />

@code {
    private string? _username;
    private string? _email;
    private List<ChildRef> _roles = [];
    private HashSet<Guid> _assignedRoleIds = [];
    private EntityPickerModal _rolePickerModal = null!;
    private ConfirmModal _confirmModal = null!;

    protected override async Task LoadCoreAsync()
    {
        var result = await RetrievalService.GetUserAsync(Id, hydrate: true);
        if (result.ResultCode == RetrieveResultCode.Success && result.Item != null)
        {
            _username = result.Item.Username;
            _email = result.Item.Email;
            _roles = result.Item.Roles ?? [];
            _assignedRoleIds = _roles.Select(r => r.Id).ToHashSet();
        }
        else
        {
            NavigationManager.NavigateTo(AppRoutes.Users);
        }
    }

    private async Task<(List<PickerItem>, int)> FetchAvailableRolesAsync(int skip, int take)
    {
        var result = await RetrievalService.ListRolesAsync(skip: skip, take: take);
        if (result.ResultCode == RetrieveResultCode.Success && result.Data != null)
        {
            var items = result.Data.Items.Select(r => new PickerItem(r.Id, r.Name, r.Description)).ToList();
            return (items, result.Data.TotalCount);
        }
        return ([], 0);
    }

    private async Task SaveAsync()
    {
        if (string.IsNullOrWhiteSpace(_username) || string.IsNullOrWhiteSpace(_email)) return;
        await ExecuteSafeAsync(async () =>
        {
            var result = await ModificationService.ModifyUserAsync(new UpdateUserRequest(Id, _username, _email));
            SetResultMessage(result.ResultCode == ModifyResultCode.Success, "Saved.", result.Message);
        });
    }

    private async Task AddRolesAsync(List<Guid> roleIds)
    {
        await ExecuteSafeAsync(async () =>
        {
            var result = await RegistrationService.RegisterRolesWithUserAsync(new RegisterRolesWithUserRequest(roleIds, Id));
            SetResultMessage(result.ResultCode == AssignRolesToUserResultCode.Success, $"{roleIds.Count} role(s) assigned.", result.Message ?? "Failed.");
            await ReloadAsync();
        });
    }

    private void ConfirmRemoveRole(Guid roleId, string name) => ShowConfirmation(_confirmModal, roleId, $"Remove role '{name}'?");

    private async Task RemoveRoleAsync()
    {
        await ExecuteSafeAsync(async () =>
        {
            var result = await DeregistrationService.DeregisterRolesFromUserAsync(new DeregisterRolesFromUserRequest([_confirmItemId], Id));
            SetResultMessage(result.ResultCode == DeregisterRolesFromUserResultCode.Success, "Role removed.", result.Message ?? "Failed.");
            await ReloadAsync();
        });
    }
}
