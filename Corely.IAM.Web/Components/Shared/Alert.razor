@if (!string.IsNullOrWhiteSpace(Message))
{
    <div class="alert alert-@Type.ToString().ToLower() alert-dismissible fade show" role="alert">
        @Message
        @if (Dismissible)
        {
            <button type="button" class="btn-close" @onclick="Dismiss" aria-label="Close"></button>
        }
    </div>
}

@code {
    [Parameter]
    public string? Message { get; set; }

    [Parameter]
    public AlertType Type { get; set; } = AlertType.Info;

    [Parameter]
    public bool Dismissible { get; set; } = true;

    [Parameter]
    public EventCallback OnDismissed { get; set; }

    private async Task Dismiss()
    {
        Message = null;
        await OnDismissed.InvokeAsync();
    }
}
