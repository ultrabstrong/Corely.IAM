@if (_visible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);" @onclick="OnBackdropClick">
        <div class="modal-dialog" @onclick:stopPropagation="true">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Cancel" disabled="@_loading"></button>
                </div>
                <div class="modal-body">
                    @ChildContent
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" @onclick="Cancel" disabled="@_loading">Cancel</button>
                    <button type="button" class="btn btn-primary btn-sm" @onclick="ConfirmAsync" disabled="@_loading">
                        @if (_loading)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                        }
                        @ConfirmText
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public string Title { get; set; } = "Create";

    [Parameter]
    public string ConfirmText { get; set; } = "Create";

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public EventCallback OnConfirm { get; set; }

    private bool _visible;
    private bool _loading;

    public void Show()
    {
        _visible = true;
        _loading = false;
        StateHasChanged();
    }

    public void Hide()
    {
        _visible = false;
        _loading = false;
        StateHasChanged();
    }

    private async Task ConfirmAsync()
    {
        _loading = true;
        StateHasChanged();
        try
        {
            await OnConfirm.InvokeAsync();
        }
        finally
        {
            Hide();
        }
    }

    private void Cancel()
    {
        if (!_loading) Hide();
    }

    private void OnBackdropClick()
    {
        Cancel();
    }
}
