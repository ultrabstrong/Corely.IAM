@page "/iam/accounts/{id:guid}"
@model Corely.IAM.Web.Pages.Management.Accounts.DetailModel
@{
    Layout = "_ManagementLayout";
    ViewData["Title"] = Model.AccountName;
}

<div class="management-header">
    <h1>Account: @Model.AccountName</h1>
    <a href="@Corely.IAM.Web.AppRoutes.Accounts" class="btn btn-outline-secondary">Back to List</a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <partial name="_Alert" view-data='new ViewDataDictionary(ViewData) { { "AlertType", Model.MessageType }, { "AlertMessage", Model.Message } }' />
}

<div class="detail-section">
    <h3>Properties</h3>
    <form method="post" asp-page-handler="Edit">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Account Name</label>
                <input type="text" class="form-control" name="AccountName" value="@Model.AccountName" required />
            </div>
            <div class="col-auto d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>

<div class="detail-section">
    <h3>Users</h3>

    <form method="post" asp-page-handler="AddUser" class="row g-3 mb-3">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="col-auto flex-grow-1">
            <input type="text" class="form-control" name="UserId" placeholder="User ID (GUID)" required />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-outline-primary">Add User</button>
        </div>
    </form>

    <table class="table table-hover mb-0">
        <thead>
            <tr>
                <th>Name</th>
                <th class="table-actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Users.Count == 0)
            {
                <tr><td colspan="2" class="text-muted text-center">No users</td></tr>
            }
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td class="table-actions">
                        <a href="@Corely.IAM.Web.AppRoutes.Users/@user.Id" class="btn btn-sm btn-outline-primary">View</a>
                        <form method="post" asp-page-handler="RemoveUser" class="d-inline" onsubmit="return confirm('Remove this user?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="Id" value="@Model.Id" />
                            <input type="hidden" name="UserId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
