@page "/iam/roles"
@model Corely.IAM.Web.Pages.Management.Roles.IndexModel
@{
    Layout = "_ManagementLayout";
    ViewData["Title"] = "Roles";
}

<div class="management-header">
    <h1>Roles</h1>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <partial name="_Alert" view-data='new ViewDataDictionary(ViewData) { { "AlertType", Model.MessageType }, { "AlertMessage", Model.Message } }' />
}

<div class="card mb-4">
    <div class="card-header"><h5 class="mb-0">Create Role</h5></div>
    <div class="card-body">
        <form method="post" asp-page-handler="Create" class="row g-3">
            @Html.AntiForgeryToken()
            <div class="col-auto flex-grow-1">
                <input type="text" class="form-control" name="RoleName" placeholder="Role name" required />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>System</th>
                    <th class="table-actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Count == 0)
                {
                    <tr><td colspan="4" class="text-muted text-center">No roles found</td></tr>
                }
                @foreach (var role in Model.Items)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>@role.Description</td>
                        <td>@(role.IsSystemDefined ? "Yes" : "No")</td>
                        <td class="table-actions">
                            <a href="@Corely.IAM.Web.AppRoutes.Roles/@role.Id" class="btn btn-sm btn-outline-primary">View</a>
                            @if (!role.IsSystemDefined)
                            {
                                <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Delete this role?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="RoleId" value="@role.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@{
    ViewData["PaginationSkip"] = Model.Skip;
    ViewData["PaginationTake"] = Model.Take;
    ViewData["PaginationTotalCount"] = Model.TotalCount;
    ViewData["PaginationBaseUrl"] = Corely.IAM.Web.AppRoutes.Roles;
}
<partial name="_Pagination" />
