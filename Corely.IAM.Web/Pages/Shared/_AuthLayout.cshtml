@using System.Reflection
@using Corely.IAM.Users.Providers
@inject IUserContextProvider UserContextProvider
@{
    var title = ViewData["Title"]?.ToString() ?? "Corely IAM";
    var version = Assembly.GetEntryAssembly()?.GetName().Version?.ToString(3) ?? "0.0.0";
    var userContext = UserContextProvider.GetUserContext();
    var username = userContext?.User?.Username;
    var userProfileUrl = Corely.IAM.Web.AppRoutes.Profile;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Corely IAM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/_content/Corely.IAM.Web/css/iam-web.css" />
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Corely IAM</a>
            @if (userContext != null)
            {
                <ul class="navbar-nav ms-auto flex-row gap-2">
                    <li class="nav-item">
                        <a class="nav-link" href="@Corely.IAM.Web.AppRoutes.CreateAccount"><i class="bi bi-plus-circle"></i> Create Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@userProfileUrl"><i class="bi bi-person"></i> @username</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Corely.IAM.Web.AppRoutes.SignOut">Sign Out</a>
                    </li>
                </ul>
            }
        </div>
    </header>

    <main class="container flex-grow-1 d-flex justify-content-center">
        <div class="col-md-5 auth-container">
            @RenderBody()
        </div>
    </main>

    <footer class="site-footer">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; @DateTime.UtcNow.Year Corely IAM</span>
            <a href="https://github.com/ultrabstrong/Corely.IAM" target="_blank"><i class="bi bi-github me-1"></i>Source</a>
            <span><a href="/privacy">Privacy Policy</a> | <a href="/terms">Terms of Use</a> | v@(version)</span>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
